{
    "manifest_version": 2,
    "name": "PageMAker",
    "description": "page maker",
    "version": "0",
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/firebasejs/7.1.0/firebase-app.js https://www.gstatic.com/firebasejs/7.1.0/firebase-auth.js https://www.gstatic.com/firebasejs/7.1.0/firebase-database.js; object-src 'self'",
    "background": {
        "page": "bg.html",
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs",
        "http://*/",
        "https://*/"
    ]
}